<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
</head>
<body>
    <% if(foundUsers.length == 0){ %>
        <p>No Matches Found</p>
    <% }else{ %>
        <% foundUsers.forEach(function(user){ %>
            <% if(user.email !== currentUser.email){ %>
                <% if(currentUser.subscriptions.indexOf(user._id) === -1){ %>
                    <div>
                        <div>
                            <img src="<%= user.profilePicture %>">
                        </div>
                        <div>
                            <h3><%= user.username.split(" ")[0] %></h3>
                        </div>
                        <button id="<%= user._id %>" onclick="ajaxDetermine('<%= user._id %>')">Subscribe</button>
                    </div>
                <% }else if(currentUser.subscriptions.indexOf(user._id) !== -1){ %>
                    <div>
                        <div>
                            <img src="<%= user.profilePicture %>">
                        </div>
                        <div>
                            <h3><%= user.username.split(" ")[0] %></h3>
                        </div>
                        <button id="<%= user._id %>" onclick="ajaxDetermine('<%= user._id %>')">Unsubscribe</button>
                    </div>
                <% } %>
            <% } %>
            
        <% }) %>
    <% } %>
    

    <!-- jQuery CDN - min version -->
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"
  	integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  	crossorigin="anonymous"></script>
	<!-- Popper.JS -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
	<!-- Bootstrap JS -->
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function(){
            
		});

		function ajaxDetermine(id){
			let buttonText = $("#"+id).text();
			if(buttonText === "Subscribe"){
				ajaxSubscribe(id);
			} else if(buttonText === "Unsubscribe"){
				ajaxUnsubscribe(id);
			}
		}
			function ajaxSubscribe(id){
				// PREPARE FORM DATA
				var selectedUser = {
					id : id,
				}
				var currentUserId = "<%= currentUser._id %>";

				// DO POST
				$.ajax({
				type : "POST",
				contentType : "application/json",
				url :"/users/"+currentUserId+"/subscribe",
				data : JSON.stringify(selectedUser),
				dataType : 'json',
				success : function(result) {
                    const button = $("#"+id);
                    button.text("Unsubscribe"); 
				},
				error : function(e) {
					alert("Error!")
					console.log("ERROR: ", e);
				}
				});
            }
            function ajaxUnsubscribe(id){
				// PREPARE FORM DATA
				var selectedUser = {
					id : id,
				}
				var currentUserId = "<%= currentUser._id %>";

				// DO POST
				$.ajax({
				type : "POST",
				contentType : "application/json",
				url :"/users/"+currentUserId+"/unsubscribe",
				data : JSON.stringify(selectedUser),
				dataType : 'json',
				success : function(result) {
                    const button = $("#"+id);
                    button.text("Subscribe"); 
				},
				error : function(e) {
					alert("Error!")
					console.log("ERROR: ", e);
				}
				});
			}
    </script>
</body>
</html>